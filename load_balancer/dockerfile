from python 

RUN pip3 install ryu

RUN /bin/sh -c apt-get update &&     apt-get install -y --no-install-recommends       python-setuptools       python-pip       python-eventlet       python-lxml       wget       unzip &&     apt-get clean &&     rm -rf /var/lib/apt/lists/* &&     echo "Download https://github.com/osrg/ryu/archive/master.zip and install" &&     wget -O /opt/ryu.zip "http://github.com/osrg/ryu/archive/master.zip" --no-check-certificate &&     unzip -q /opt/ryu.zip -d /opt &&     mv /opt/ryu-master /opt/ryu &&     rm /opt/ryu.zip &&     cd /opt/ryu &&     pip install -r tools/pip-requires &&     python ./setup.py install

RUN /bin/sh -c pip install -r /opt/ryu/tools/pip-requires --upgrade

EXPOSE 6633/tcp

RUN mkdir /app

WORKDIR /opt/ryu 

WORKDIR /app

COPY ./ .

 CMD ["./bin/ryu-manager" "./load_balance.py ../rest_topology.py --observe-links"]



